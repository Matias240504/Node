<!-- views/auth/login.html -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Iniciar Sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- En login.ejs -->
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/login.css">
    <style>
        /* Estilos para el campo de contraseña con botón */
        .campo-password {
            position: relative;
            width: 100%;
        }
        
        .campo-password input {
            width: 100%;
            padding-right: 80px; /* Espacio para el botón */
        }
        
        .btn-toggle {
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            background: none;
            border: none;
            border-left: 1px solid #ddd;
            padding: 0 15px;
            cursor: pointer;
            color: var(--secondary-color);
            font-weight: 500;
            transition: background-color 0.3s;
        }
        
        .btn-toggle:hover {
            background-color: rgba(52, 152, 219, 0.1);
        }
    </style>
</head>
<body>
    <h2>Iniciar Sesión</h2>
    <form id="loginForm">
        <input type="text" placeholder="Email" name="email" required />
        <div class="campo-password">
            <input type="password" id="contrasena" placeholder="Contraseña" name="contrasena" required />
            <button type="button" id="toggleContrasena" class="btn-toggle">Mostrar</button>
        </div>
        <button type="submit">Ingresar</button>
    </form>

    <p>¿No tienes cuenta? <a href="/auth/register">Regístrate aquí</a></p>

    <script>
        // Toggle para mostrar/ocultar contraseña
        const toggleContrasena = document.getElementById('toggleContrasena');
        const inputContrasena = document.getElementById('contrasena');
        
        toggleContrasena.addEventListener('click', () => {
            const tipo = inputContrasena.type === 'password' ? 'text' : 'password';
            inputContrasena.type = tipo;
            toggleContrasena.textContent = tipo === 'password' ? 'Mostrar' : 'Ocultar';
        });
        
        document.getElementById('loginForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        const formData = new FormData(this);
        const data = {
            email: formData.get('email'),
            contrasena: formData.get('contrasena')
        };

        const response = await fetch('/api/users/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        const result = await response.json();
        if (response.ok) {
            // Guardamos el token de forma segura
            localStorage.setItem('token', result.token);
            
            // Guardamos información básica del usuario
            localStorage.setItem('userName', result.usuario);
            localStorage.setItem('userRole', result.rol);
            localStorage.setItem('userId', result.userId);
            
            // Crear una cookie con el token (expira en 24 horas)
            document.cookie = `token=${result.token}; path=/; max-age=86400; secure; samesite=strict`;
            
            alert("Login exitoso, bienvenido " + result.usuario);
            
            // Redirigir según rol con el token en la URL (para la primera redirección)
            if (result.rol === 'juez') {
                window.location.href = `/juez/dashboard?token=${result.token}`;
            } else if (result.rol === 'abogado') {
                window.location.href = `/abogado/dashboard?token=${result.token}`;
            } else {
                window.location.href = `/cliente/dashboard?token=${result.token}`;
            }
        } else {
            alert(result.message || 'Credenciales inválidas');
        }
        });
    </script>
</body>
</html>
